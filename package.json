{
  "name": "yash-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website with robust backend API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "echo 'Linter not configured. Add ESLint if needed.'",
    "docker:build": "docker build -t portfolio:latest .",
    "docker:run": "docker run -p 3000:3000 portfolio:latest",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": ["portfolio", "backend", "api"],
  "author": "Yash Kamboj",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.3",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

