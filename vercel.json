{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/assets/Yash-Kamboj-Resume.pdf",
      "headers": [
        { "key": "Content-Disposition", "value": "attachment; filename=\"Yash-Kamboj-Resume.pdf\"" },
        { "key": "Cache-Control", "value": "public, max-age=3600, immutable" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
